#!/bin/bash

# Make me a sammich.
#
# Sandwich art courtesy of http://www.ascii-art.de/ascii/s/sandwich.txt 

if [[ $EUID -ne 0 ]]; then
    echo "Make it yourself."
else
    cat <<SAMMICH
                        _.---._
                    _.-~       ~-._
                _.-~               ~-._
            _.-~                       ~---._
        _.-~                                 ~\\
     .-~                                    _.;
     :-._                               _.-~ ./
     \`-._~-._                   _..__.-~ _.-~
      /  ~-._~-._              / .__..--~----._
     \_____(_;-._\.        _.-~_/       ~).. . \\
        /(_____  \\\`--...--~_.-~______..-+_______)
      .(_________/\`--...--~/    _/           /\\
     /-._     \\_     (___./_..-~__.....__..-~./
     \`-._~-._   ~\\--------~  .-~_..__.-~ _.-~
         ~-._~-._ ~---------'  / .__..--~
             ~-._\.        _.-~_/
                 \\\`--...--~_.-~
                  \`--...--~
SAMMICH
fi
